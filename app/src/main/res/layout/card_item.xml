<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_img"
        android:layout_width="@dimen/cate_card_size"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:alpha=".5"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio=".75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/sheetbg" />

    <ImageButton
        android:id="@+id/card_btn"
        android:layout_width="?android:attr/windowTitleSize"
        android:layout_height="?android:attr/windowTitleSize"
        android:alpha=".9"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/resume"
        app:layout_constraintBottom_toBottomOf="@+id/card_img"
        app:layout_constraintEnd_toEndOf="@+id/card_img"
        app:layout_constraintStart_toStartOf="@+id/card_img"
        app:layout_constraintTop_toTopOf="@+id/card_img"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DefaultName"
        app:layout_constraintBottom_toBottomOf="@+id/card_img"
        app:layout_constraintEnd_toEndOf="@+id/card_img"
        app:layout_constraintStart_toStartOf="@+id/card_img"
        app:layout_constraintTop_toTopOf="@+id/card_img"
        app:layout_constraintVertical_bias="0.35000002" />

</androidx.constraintlayout.widget.ConstraintLayout>